<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.codetribe.quizappremake.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iTeb Quiz App"
        android:textSize="28sp"
        android:textColor="@android:color/holo_red_light"
        android:layout_gravity="center_horizontal" />
    <ImageView
        android:src="@drawable/daily"
        android:layout_width="match_parent"
        android:layout_height="148sp" />

    <Button
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_extension_black_24dp"
        android:text="Puzzle Quiz"
        android:textColor="#FFF"
        android:textSize="26sp"
        android:layout_gravity="center_horizontal"
        android:onClick="goToPuzzle"/>
    <Button
        android:background="@android:color/holo_orange_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Sports Quiz"
        android:textColor="#FFF"
        android:drawableLeft="@drawable/ic_camera_black_24dp"
        android:layout_gravity="center_horizontal"
        android:textSize="26sp"
        android:onClick="goToSports"/>
    <Button
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Mind Quiz"
        android:textColor="#FFF"
        android:drawableLeft="@drawable/ic_lightbulb_outline_black_24dp"
        android:layout_gravity="center_horizontal"
        android:textSize="26sp"
        android:onClick="goToMind"/>
</LinearLayout>
